---
global:
  scrape_interval: 10s
  evaluation_interval: 1m

scrape_configs:
  - job_name: 'prometheus'
    scheme: https
    tls_config:
      ca_file: '{{ prometheus_cafile }}'
    basic_auth:
      username: prometheus
      password_file: '{{ prometheus_passwordfile }}'
    static_configs:
      - targets: ['localhost:9090']

