{%
  macro elastic_send(es, index = 'elastic_search_index', template = 'json')
%}
action(
  esVersion.major="8"
  type="omelasticsearch"
  server="{{ es.server }}"
  usehttps="on"
  allowunsignedcerts="off"
  skipverifyhost="off"
  uid="{{ es.user }}"
  pwd="{{ es.password }}"
  template="{{ template }}"
  searchIndex="{{ index }}"
  dynSearchIndex="on"
  bulkmode="on"
  errorfile="/var/log/rsyslog-omelasticsearch.log"
)
{%- endmacro %}
